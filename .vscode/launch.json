{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Selected Question",
            "type": "cppdbg",
            "request": "launch",
            "program": "T:/Programs/C++ Programs/Lab 1/${input:questionName}/main.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "T:/Programs/C++ Programs/Lab 1/${input:questionName}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build",
            "miDebuggerPath": "C:/mingw64/bin/gdb.exe"
        }
    ],
    "inputs": [
        {
            "id": "questionName",
            "type": "pickString",
            "description": "Select which question to run",
            "options": [
                "Question_1",
                "Question_2",
                "Question_3",
                "Question_4"
            ]
        }
    ]
}
